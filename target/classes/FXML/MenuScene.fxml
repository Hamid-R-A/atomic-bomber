<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MenuView">
    <children>
        <VBox alignment="CENTER" layoutX="253.0" layoutY="105.0" prefHeight="230.0" prefWidth="112.0" spacing="4">
            <Button mnemonicParsing="false" onMouseClicked="#startGame" text="start a new game"/>
            <Button mnemonicParsing="false" onMouseClicked="#continueGame" prefHeight="26.0" prefWidth="106.0"
                    text="continue game"/>
            <Button mnemonicParsing="false" onMouseClicked="#backToProfileMenu" prefHeight="26.0" prefWidth="103.0"
                    text="profile menu"/>
            <Button mnemonicParsing="false" onMouseClicked="#pointsMenu" prefHeight="26.0" prefWidth="102.0"
                    text="pointsChart"/>
            <Button mnemonicParsing="false" onMouseClicked="#settingMenu" prefHeight="26.0" prefWidth="99.0"
                    text="settings"/>
            <Button mnemonicParsing="false" onMouseClicked="#closeTheStage" prefHeight="26.0" prefWidth="98.0"
                    text="exit game"/>
        </VBox>
        <ImageView fx:id="avatarShownOnTopOfMenu" fitHeight="89.0" fitWidth="112.0" layoutX="488.0" layoutY="-2.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <Label fx:id="username" alignment="CENTER" layoutY="4.0" prefHeight="18.0" prefWidth="70.0" text="Label"
               underline="true">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
